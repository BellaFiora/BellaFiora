{
	"manifest_version": 3,
	"name": "BellaFiora",
	"version": "1.0",
	"description": "Enhance the osu! user page experience",
	"icons": {
		"16": "icons/chibi-16x16.png",
		"32": "icons/chibi-32x32.png",
		"48": "icons/chibi-48x48.png",
		"128": "icons/chibi-128x128.png"
	},
	"background": {
		"service_worker": "background.js"
	},
	"action": {
		"default_popup": "bellafiora.html",
		"default_icon": {
			"16": "icons/chibi-16x16.png",
			"32": "icons/chibi-32x32.png",
			"48": "icons/chibi-48x48.png",
			"128": "icons/chibi-128x128.png"
		}
	},
	"permissions": ["activeTab", "scripting", "webNavigation"],
	"commands": {
		"_execute_action": {
			"suggested_key": {
				"default": "Ctrl+B",
				"mac": "Command+B"
			}
		}
	},
	"content_scripts": [
		{
			"js": ["scripts/content.js"],
			"matches": [
				"https://osu.ppy.sh/users/*"
			]
		}
	]
}